/**app.wxss**/
@import "weui.wxss";
@import "reset.wxss";

.ico-add {
  background: url(../res/img/icon_nav_layout.png) no-repeat 0 0;
  width: 24px;
  height: 24px;
  display: inline-block;
  background-size: cover;
}
.ico-reduce {
  background: url(../res/img/icon_nav_layout.png) no-repeat 0 0;
  width: 24px;
  height: 24px;
  display: inline-block;
  background-size: cover;
}
.ico-addprodcut {
  background: url(../res/img/ico-addproduct.png) no-repeat 0 0;
  width: 40px;
  height: 51px;
  display: inline-block;
  background-size: cover;
}
.footer {
  background: #fff;
  position: fixed;
  bottom: 0;
  width: 100%;
}
html,
body,
.container {
  height: 100%;
}
.weui-cells__tips a {
  padding-top: 5px;
  padding-bottom: 10px;
  display: inline-block;
  color: #207ddc;
}
.weui-tabbar__item.weui-bar__item_on .weui-tabbar__icon,
.weui-tabbar__item.weui-bar__item_on .weui-tabbar__icon > i,
.weui-tabbar__item.weui-bar__item_on .weui-tabbar__label {
  color: #f97a4d;
}
.weui-btn_primary {
  background-color: #f97a4d;
  border-radius: 32px;
}
.weui-btn_primary:not(.weui-btn_disabled):active {
  background-color: #e18157;
}
